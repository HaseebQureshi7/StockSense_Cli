{
  "compilerOptions": {
    "target": "ES6",                        // Target ES6 or whatever is required
    "module": "commonjs",                   // CommonJS modules for Node.js
    "outDir": "./dist",                     // Output directory for compiled files
    "rootDir": "./",                        // Source directory
    "strict": true,                         // Enable strict type checking
    "esModuleInterop": true,                // Enable compatibility for ES6 imports
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.ts"],                 // Include all TS files
  "exclude": ["node_modules"]               // Exclude node_modules
}
